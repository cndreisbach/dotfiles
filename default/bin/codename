from functools import reduce
import random
import argparse


def word_list(text):
    tuples = [tuple(line.rstrip().split(","))
              for line in text.strip().split("\n")]

    words = reduce(lambda ws, x: ws + [x[1]] * int(x[0]), tuples, [])
    return words


def main():
    parser = argparse.ArgumentParser(description="Pick N codewords.")
    parser.add_argument('count', metavar='N', type=int, nargs='?',
                        help="number of codewords", default=1)
    args = parser.parse_args()
    words_one = word_list(part_one)
    words_two = word_list(part_two)
    for _ in range(args.count):
        print("-".join((random.choice(words_one),
                        random.choice(words_two))))


if __name__ == '__main__':
    main()
