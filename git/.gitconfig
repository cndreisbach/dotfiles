[user]
    email = clinton@dreisbach.us
    name = Clinton Dreisbach
    initials = cnd
[github]
    user = cndreisbach
[core]
    excludesfile = ~/.gitignore_global
    pager = less
    editor = "nano -r 72"
[credential]
    helper = osxkeychain
[include]
    path = ~/.gitconfig.local
[alias]
    cleanup = !git remote prune origin && git gc && git stash clear
    diffall = diff --cached
    graph = log --graph --decorate --pretty=oneline --abbrev-commit
    ls = ls-files
    undo = reset --hard
    who = shortlog -n -s --no-merges
    ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    rmb = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
[color]
    ui = auto
    diff = auto
[format]
    # 4436819 [23 hours ago] (Gabe Berke-Williams) One line prompt
    pretty = %C(magenta)%h%Creset %Cgreen[%cr]%Creset (%an) %s
[apply]
    whitespace = fix
[help]
    autocorrect = 1
[push]
    default = tracking
[branch]
    autosetupmerge = true
    autosetuprebase = remote
[rebase]
    autostash = 1
