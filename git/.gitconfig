[github]
    user = cndreisbach
[core]
	excludesfile = /Users/clinton/.gitignore_global
    pager = less
    editor = "nano -r 72"
	autocrlf = input
[include]
    path = ~/.gitconfig.local
[alias]
	aliases = config --get-regexp ^alias\\.
    amend = commit --amend
    branches = branch -a
    cleanup = !git remote prune origin && git gc && git stash clear
    diffall = diff --cached
    discard = checkout --
    force-push = push --force-with-lease
    generate-ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
    graph = log --graph --branches --remotes --tags  --format=format:'%Cgreen%h %Creset %s (%cN, %cr) %Cred%d'
    initial-commit = commit --allow-empty -m 'Initial commit'
    list-tracked = ls-tree -r HEAD --name-only
    ls = ls-files
    new-branch = checkout -b
    prune = fetch --prune
    push-branch = "!git push -u origin `git rev-parse --abbrev-ref HEAD`"
    remove-old-branches = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
    rmb = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"
    show-ignored = ls-files --others -i --exclude-standard
    initial-commit = "commit --allow-empty -m 'Initial commit'"
    st = status --short --branch
    stash-all = stash save --include-untracked
    stashes = stash list
    tags = tag
    uncommit = reset --mixed HEAD~
    undo = reset --hard
    unstage = reset -q HEAD --
    who = shortlog -n -s --no-merges
[color]
    ui = auto
    diff = auto
[format]
    # 4436819 [23 hours ago] (Gabe Berke-Williams) One line prompt
    pretty = %C(magenta)%h%Creset %Cgreen[%cr]%Creset (%an) %s
[apply]
    whitespace = fix
[help]
    autocorrect = 1
[push]
    default = simple
    gpgsign = if-asked
[branch]
    autosetupmerge = true
    autosetuprebase = remote
[rebase]
    autostash = 1
[ghq]
	root = ~/repos
[commit]
	gpgsign = true
[gpg]
	program = /usr/local/bin/gpg
[diff]
  tool = meld
[difftool]
  prompt = false
[difftool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args \"$LOCAL\" \"$REMOTE\"
[merge]
  tool = meld
[mergetool]
  prompt = false
[mergetool "meld"]
  trustExitCode = true
  cmd = open -W -a Meld --args --auto-merge \"$LOCAL\" \"$BASE\" \"$REMOTE\" --output=\"$MERGED\"

