### ALIASES

# 1 chars
alias a='ack'
alias b='bundle'
alias c='cd'
alias d='df -h'
alias e=$EDITOR
alias f='find'
alias g='grep'
alias h="history"
alias i='id'
alias j="echo 'nothing set for j'"
alias k='kill'
alias l="ls -laFH"
alias m='mkdir -p'
alias n='nano'
alias o='popd'
alias p='pushd'
alias q="echo 'nothing set for q'"
alias r='rake'
alias s='sudo'
alias t="echo 'nothing set for t'"
alias u="sudo aptitude update"
alias v="vim"
alias w='which'
alias x='xargs'
alias y="echo 'no alias for y'"
alias z="echo 'no alias for z'"

# More
alias .a="$EDITOR ~/dotfiles/aliases && source ~/dotfiles/aliases"
alias .e="$EDITOR ~/dotfiles/env && source ~/dotfiles/env"
alias \?="history | grep $1"
alias ducks="du -cks * | sort -rn | head -11"
alias emacs='emacs -nw'
alias gr="grep -r"
alias hm='todo.pl'
alias k9='kill -9'
alias ll="ls -laFh"
alias mkdir="mkdir -pv"
alias ps\?="ps ax | grep $1"
alias rake="noglob rake"
alias reload="source ~/.env && source ~/.aliases"
alias rr="rbenv rehash"
alias root='sudo -i'
alias socks='autossh -M 20000 -vND 9999 server1.crnixon.org'
alias su='sudo su -'
alias vi='vim'

if [[ $(uname) == 'Linux' ]]; then
  alias sap='sudo aptitude'
  alias open='gnome-open'
fi

# Cleanup
alias rmlogs="find . -name '*.log' | xargs rm"
alias rmorig="find . -name '*.orig' | xargs rm"

# Git
alias ga='git add'
alias gb='git branch'
alias gaa='git add --all'
alias gap='git add --patch'
alias gc='git commit'
alias gca='git commit --amend -C HEAD'
alias glog="git log --graph"
alias gpp='git pp'
alias gs='git status'
alias gst='git status'

# Rails
alias rc="./script/rails console"
alias rg="./script/rails generate"
alias rs="./script/rails server"
alias rrr="touch tmp/restart.txt"

# Bundler
alias bi="bundle install"
alias bif="bundle install --path vendor --binstubs"
alias bp="bundle package"
alias bu="bundle update"
alias be="bundle exec"
alias bo="bundle open"
alias binit="bif && bundle package && echo 'vendor/ruby' >> .gitignore"
