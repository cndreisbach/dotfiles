### ALIASES
alias g+="grep -r $1 *"
alias h="history"
alias ll="ls -laFh"
alias \?="history | grep $1"
alias ps\?="ps ax | grep $1"
alias c='clear'
alias my='mysql -u root'
alias .a="$EDITOR ~/dotfiles/aliases && source ~/dotfiles/aliases"
alias .e="$EDITOR ~/dotfiles/env && source ~/dotfiles/env"
alias reload="source ~/.aliases && source ~/.env"
alias push="rake && git push"
alias deploy="rake && git push && cap deploy"
alias ducks="du -cks * | sort -rn | head -11"
alias lip="lorem $* | pbcopy"
alias vi='vim'
# Editor
alias e=$EDITOR

# Subversion
alias sa='svn status | grep "^\?" | awk "{print \$2}" | xargs svn add'
alias sl='svn log --limit 5'
alias se='svn log -v --limit 1'
alias sr='svn diff | less'
alias s\?='svn status | grep "^\?"'

# Git
alias ga='git add'
alias gb='git branch'
alias gap='git add --patch'
alias gc='git commit'
alias gca='git commit -a'
alias gst='git status'
alias gs='git status'
alias gsd='git svn dcommit'
alias gsr='git svn rebase'
alias gpp='git pp'
alias gci='git pull --rebase && rake && git push'

# Rails
alias ss='script/server'
alias rs='rails server'
alias sc='script/console'
alias rc='rails console'
alias sg='script/generate'
alias rg='rails generate'
alias rr='touch tmp/restart.txt'
alias rp='passenger start &'

# Cleanup
alias rmorig="find . -name '*.orig' | xargs rm"
alias rmlogs="find . -name '*.log' | xargs rm"

# Bundler
alias b="bundle"
alias bi="bundle install --path vendor"
alias bp="bundle package"
alias bu="bundle update"
alias be="bundle exec"
alias binit="bi && bundle package && echo 'vendor/ruby' >> .gitignore"

alias hyde="python /usr/local/Cellar/hyde/0.5.3/hyde.py"
