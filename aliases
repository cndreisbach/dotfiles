### ALIASES

# 1 chars
alias a='ack'
alias b='bundle'
alias c='cd'
alias e=$EDITOR
alias f='find'
alias g='grep'
alias h="history"
alias l="ls"
alias o='popd'
alias p='pushd'
alias r='rake'
alias s='sudo'

# More
alias gr="grep -r"
alias ll="ls -laFh"
alias \?="history | grep $1"
alias ps\?="ps ax | grep $1"
alias .a="$EDITOR ~/dotfiles/aliases && source ~/dotfiles/aliases"
alias .e="$EDITOR ~/dotfiles/env && source ~/dotfiles/env"
alias reload="source ~/.aliases && source ~/.env"
alias ducks="du -cks * | sort -rn | head -11"
alias vi='vim'
alias ack='ack-grep'
alias sap='sudo aptitude'
alias open='gnome-open'
alias hm='todo.pl'
alias nv="~/Projects/envy/nv.pl"

# Git
alias ga='git add'
alias gb='git branch'
alias gaa='git add --all'
alias gap='git add --patch'
alias gc='git commit'
alias gca='git commit --amend -C HEAD'
alias gst='git status'
alias gs='git status'
alias gpp='git pp'

# Rails
alias ss='script/server'
alias rs='rails server'
alias sc='script/console'
alias rc='rails console'
alias sg='script/generate'
alias rg='rails generate'
alias rr='touch tmp/restart.txt'
alias rp='passenger start &'

# Cleanup
alias rmorig="find . -name '*.orig' | xargs rm"
alias rmlogs="find . -name '*.log' | xargs rm"

# Bundler
alias bi="bundle install --path vendor"
alias bp="bundle package"
alias bu="bundle update"
alias be="bundle exec"
alias binit="bi && bundle package && echo 'vendor/ruby' >> .gitignore"
