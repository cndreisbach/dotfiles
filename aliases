### ALIASES

# 1 chars
alias a='ack'
alias b='bundle'
alias c='cd'
alias d='df -h'
alias e=$EDITOR
alias f='find'
alias g='grep'
alias h="history"
alias i='id'
# j reserved for autojump
alias k='kill'
alias l="ls -laFH"
alias m='mkdir -p'
alias n='nano'
alias o='popd'
alias p='pushd'
alias q="echo 'no alias for q'"
alias r='rake'
alias s='sudo'
alias t='todo.pl'
alias u="sudo aptitude update"
alias v="vim"
alias w='which'
alias x='xargs'
alias y="echo 'no alias for y'"
alias z="echo 'no alias for z'"

# More
alias gr="grep -r"
alias ll="ls -laFh"
alias \?="history | grep $1"
alias ps\?="ps ax | grep $1"
alias .a="$EDITOR ~/dotfiles/aliases && source ~/dotfiles/aliases"
alias .e="$EDITOR ~/dotfiles/env && source ~/dotfiles/env"
alias reload="source ~/.aliases && source ~/.env"
alias ducks="du -cks * | sort -rn | head -11"
alias vi='vim'
alias ack='ack-grep'
alias sap='sudo aptitude'
alias open='gnome-open'
alias hm='todo.pl'
alias nv="envy.pl"
alias mvim="gvim"
alias irb="pry"

# Git
alias ga='git add'
alias gb='git branch'
alias gaa='git add --all'
alias gap='git add --patch'
alias gc='git commit'
alias gca='git commit --amend -C HEAD'
alias gst='git status'
alias gs='git status'
alias gpp='git pp'

# Rails
function rs() {
  if [ -e ./script/server ]; then
    ./script/server
  elif [ -e ./script/rails ]; then
    ./script/rails server
  else
    echo "No rails here!"
  fi
}
function rc() {
  if [ -e ./script/console ]; then
    ./script/console
  elif [ -e ./script/rails ]; then
    ./script/rails console
  else
    echo "No rails here!"
  fi
}
function rg() {
  if [ -e ./script/generate ]; then
    ./script/generate
  elif [ -e ./script/rails ]; then
    ./script/rails generate 
  else
    echo "No rails here!"
  fi
}
alias rr='touch tmp/restart.txt'

# Cleanup
alias rmorig="find . -name '*.orig' | xargs rm"
alias rmlogs="find . -name '*.log' | xargs rm"

# Bundler
alias bi="bundle install --path vendor --binstubs"
alias bp="bundle package"
alias bu="bundle update"
alias be="bundle exec"
alias binit="bi && bundle package && echo 'vendor/ruby' >> .gitignore"
